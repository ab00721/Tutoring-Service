<!DOCTYPE html>
<html lang="en">

    {{ include('shared/header.twig') }}

<body>
    {{ include('shared/nav.twig') }}

  <!-- Form section-->
  <section class="bg-light py-5 border-bottom">
    <div class="container px-5 my-5">
      <div class="text-center mb-5">
        <h2 class="fw-bolder">Sign Up for Weekly Sessions</h2>
        <p class="lead mb-0">Fill out an intake form and one of our tutors will contact you to
          schedule your first session.
        </p>
      </div>
      <div class="row gx-5 justify-content-center">
        <div class="flex-shrink-0">
          <div class="container">


            <form method="post" action=".">

              <fieldset class="border bg-white px-5 py-3 mb-5">
                <div class="mb-3">
                  <label for="parentName" class="form-label">Parent Name: </label>
                  <input type="text" class="form-control" id="parentName" name="parentName" readonly value={{ firstName }} >
                  <br> 
                  
                  <label for="studentName" class="form-label">Student Name: </label>
                  <input type="text" class="form-control" id="studentName" name="studentName" value={{ studentName }}>
                  <p class="error">{{ error_student }}</p>
                
                  <label for="grade" class="form-label">Student Grade Level: </label>
                  <select class="form-select" id="grade" name='grade' aria-label="Selct Grade">
                    <option value="">Grade Level</option>
                    {% for item in levels %}
                    <option value={{ item.levelID }}>{{ item.level }}</option>
                    {% endfor %}
                  </select>
                  <p class="error">{{ error_level }}</p>
                
                  <label for="subject" class="form-label">Subject: </label>
                  <select class="form-select" id="subject" name='subject' aria-label="Select Subject">
                    <option value="">Subject</option>
                    {% for item in subjects %}
                    <option value={{ item.subjectID }}>{{ item.subject }}</option>
                    {% endfor %}
                  </select>
                  <p class="error">{{ error_subject }}</p>
                  
                  <label for="location" class="form-label">Location: </label>
                  {% for item in locations %}
                  <div class="form-check" id="radioSelection">
                    <input class="form-check-input" type="radio" name="location" id='{{ item.locationID }}' value= {{ item.locationID }}>
                    <label class="form-check-label" for={{ item.locationID }}>
                      {{ item.location }}
                    </label>
                  </div>
                  {% endfor %}
                  <p class="error">{{ error_location }}</p>
                  
                  <input type="submit" id="submit" class="btn btn-secondary" value="Sign Up" name="action">

              </fieldset>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>

  {{ include('shared/footer.twig') }}
  {{ include('shared/script.twig') }}
</body>

</html>