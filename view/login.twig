<!DOCTYPE html>
<html lang="en">
    
{{ include('shared/header.twig') }}

<body>
    {{ include('shared/nav.twig') }}

<main>
    
    <!-- Form section-->
  <section class="bg-light py-5 border-bottom">
    <div class="container px-5 my-5">
      <div class="text-center mb-5">
        <h2 class="fw-bolder">Login to view your account</h2>
        <p class="lead mb-0">Sign up for services and view your ordered services.
        </p>
      </div>
      <div class="row gx-5 justify-content-center">
        <div class="flex-shrink-0">
          <div class="container">


            <form action="." method="post" id="login_form" class="aligned">

              <fieldset class="border bg-white px-5 py-3 mb-5">
                <div class="mb-3 mt-3">
                    
                    <p class="error">{{ login_message }}</p>
                    
                    <label for="username" class="form-label">Username: </label>
                    <input type="text" class="form-control" id ="username" name="username" value="{{ username }}">
                    <p class="error">{{ error_username }}</p>
                    
                    <label for="password" class="form-label">Password: </label>
                    <input type="password" class="form-control" id ="password" name="password" value="{{ password }}">
                    <p class="error">{{ error_password }}</p>
                    
                    <input type="submit" id="submit" class="btn btn-secondary" value="Login" name="action">
                    <br>
                    <br>
                </div>
              </fieldset>
            </form>
           </div>
        </div>
      </div>
    </div>
  </section>

</main>
</body>
</html>
